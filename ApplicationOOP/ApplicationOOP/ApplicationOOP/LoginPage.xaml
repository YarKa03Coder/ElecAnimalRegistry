<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApplicationOOP.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Label x:Name="Lbl_email" Text="E-mail"/>
            <Entry x:Name="Entry_email" Placeholder="E-mail"/>

            <Label x:Name="Lbl_Password" Text="Password"/>
            <Entry x:Name="Entry_Password" Placeholder="Password" IsPassword="True"/>
            
            <Button x:Name="Btn_LogIn" Text="Log In" Clicked="LogInProcedure"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>